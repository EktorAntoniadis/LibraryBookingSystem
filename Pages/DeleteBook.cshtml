@page "{id:int}"
@model LibraryBookingSystem.Pages.DeleteBookModel

@{
    ViewData["Title"] = "Delete Book";
}

<h1>Delete Book</h1>

<h3>Are you sure you want to delete this book?</h3>
<form method="post">
<div>
    <h4>@Model.DeleteBook.Title</h4>
        <input type="hidden" asp-for="DeleteBook.BookId" />
    <dl class="row">
        <dt class="col-sm-2">ISBN</dt>
        <dd class="col-sm-10">@Model.DeleteBook.ISBN</dd>

        <dt class="col-sm-2">Genre:</dt>
        <dd class="col-sm-10">@Model.DeleteBook.Genre.GenreName</dd>

        <dt class="col-sm-2">Author(s):</dt>
        <dd class="col-sm-10">@string.Join(", ", Model.DeleteBook.Authors.Select(a => a.FirstName + " " + a.LastName))</dd>

        <dt class="col-sm-2">Publisher:</dt>
        <dd class="col-sm-10">@Model.DeleteBook.Publisher.Name</dd>

        <dt class="col-sm-2">Publication Date:</dt>
        <dd class="col-sm-10">@Model.DeleteBook.PublicationDate</dd>
    </dl>
</div>   
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-page="/Books" class="btn btn-secondary">Cancel</a>
</form>