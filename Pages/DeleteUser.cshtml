@page "{id:int}"
@model LibraryBookingSystem.Pages.DeleteUserModel
@{
}

<h1>Delete User</h1>

<h3>Are you sure you want to delete this user?</h3>
<form method="post">
    @Html.AntiForgeryToken();
    <div>
       
        <input type="hidden" asp-for="DeleteUser.UserId" />
        <dl class="row">
            <dt class="col-sm-2">First Name</dt>
            <dd class="col-sm-10">@Model.DeleteUser.FirstName</dd>

            <dt class="col-sm-2">Last Name</dt>
            <dd class="col-sm-10">@Model.DeleteUser.LastName</dd>           
        </dl>
    </div>
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-page="/Users" class="btn btn-secondary">Cancel</a>
</form>