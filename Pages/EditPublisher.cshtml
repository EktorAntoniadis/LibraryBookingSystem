@page "{id:int}"
@model LibraryBookingSystem.Pages.EditPublisherModel

@{
    ViewData["Title"] = "Edit Publisher";
}

<h1>Edit Publisher</h1>

<form method="post" asp-page-handler="EditPublisher">
    @Html.AntiForgeryToken();
    <input type="hidden" asp-for="EditPublisher.PublisherId" />

    <div class="mb-3">
        <label asp-for="EditPublisher.Name" class="form-label">Name</label>
        <input id="Name" asp-for="EditPublisher.Name" class="form-control" required />
        <span asp-validation-for="EditPublisher.Name" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="EditPublisher.Email" class="form-label">Email</label>
        <input id="Email" asp-for="EditPublisher.Email" type="email" class="form-control" />
        <span asp-validation-for="EditPublisher.Email" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="EditPublisher.Phone" class="form-label">Phone</label>
        <input id="Phone" asp-for="EditPublisher.Phone" class="form-control" />
        <span asp-validation-for="EditPublisher.Phone" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="EditPublisher.Address" class="form-label">Address</label>
        <input id="Address" asp-for="EditPublisher.Address" class="form-control" />
        <span asp-validation-for="EditPublisher.Address" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="EditPublisher.City" class="form-label">City</label>
        <input id="City" asp-for="EditPublisher.City" class="form-control" />
        <span asp-validation-for="EditPublisher.City" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="EditPublisher.Country" class="form-label">Country</label>
        <input id="Country" asp-for="EditPublisher.Country" class="form-control" />
        <span asp-validation-for="EditPublisher.Country" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="EditPublisher.Website" class="form-label">Website</label>
        <input id="Website" asp-for="EditPublisher.Website" type="url" class="form-control" />
        <span asp-validation-for="EditPublisher.Website" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success">Save Changes</button>

    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <p class="text-danger">@Model.ErrorMessage</p>
    }
</form>
