@page
@model LibraryBookingSystem.Pages.RegisterModel
@{
    ViewData["Title"] = "Register as a member";
}

<h2>Register your data</h2>

<form method="post">
    <div class="form-group">
        <label class="form-label" asp-for="NewUser.FirstName">First name</label>
        <input class="form-control" asp-for="NewUser.FirstName" required />
    </div>
    <div class="form-group">
        <label class="form-label" asp-for="NewUser.LastName">Last name</label>
        <input class="form-control" asp-for="NewUser.LastName" required />
    </div>

    <div class="form-group">
        <label class="form-label" asp-for="NewUser.Email">Email</label>
        <input class="form-control" type="email" asp-for="NewUser.Email" required />
    </div>

    <div class="form-group">
        <label class="form-label" asp-for="NewUser.Username">Username</label>
        <input class="form-control" type="text" asp-for="NewUser.Username" required />
    </div>
    <div class="form-group">
        <label class="form-label" asp-for="NewUser.PhoneNumber">Phone number</label>
        <input class="form-control" asp-for="NewUser.PhoneNumber" required />
    </div>

    <div class="form-group">
        <label class="form-label" asp-for="NewUser.Password">Password</label>
        <input class="form-control" type="password" asp-for="NewUser.Password" required />
    </div>

    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <p class="text-danger">@Model.ErrorMessage</p>
    }

    <button type="submit" class="btn btn-primary mt-3">
        Register
    </button>
</form>
